{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/server.js"
    },
    {
      "source": "/static/(.*)",
      "destination": "client/build/static/$1"
    },
    {
      "source": "/manifest.json",
      "destination": "client/build/manifest.json"
    },
    {
      "source": "/favicon.ico",
      "destination": "client/build/favicon.ico"
    },
    {
      "source": "/(.*)",
      "destination": "client/build/index.html"
    }
  ]
}